<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:RepairTracking.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:FilePickerViewModel"
             x:Class="RepairTracking.Views.FilePickerView">
    <StackPanel Spacing="10" Margin="10">
        <Border BorderBrush="Gray" BorderThickness="1" Height="250" Width="250" Margin="5">
            <Image Source="{Binding ImageSource}" Stretch="Uniform" />
        </Border>
        <Button Content="{Binding PickingButtonText}" Command="{Binding LoadFileCommand}" HorizontalAlignment="Center" />
    </StackPanel>
</UserControl>
