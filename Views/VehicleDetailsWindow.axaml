<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RepairTracking.ViewModels"
        xmlns:views="clr-namespace:RepairTracking.Views"
        mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="820"
        x:Class="RepairTracking.Views.VehicleDetailsWindow"
        Width="750" Height="720"
        WindowStartupLocation="CenterScreen"
        x:DataType="viewModels:VehicleDetailsViewModel"
        Title="Araç Detayları">
    <Window.Styles>
        <Style Selector="Button:pointerover">
            <Setter Property="Cursor" Value="Hand" />
        </Style>
    </Window.Styles>
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,Auto">
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10" Spacing="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"
                        Margin="5 20 5 5">
                <TextBlock Text="PLAKA" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding PlateNumber}" MinWidth="250"></TextBox>
            </StackPanel>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5 20 5 5"
                       Text="{Binding PlateNumberError}"
                       IsVisible="{Binding PlateNumberHasError}" Foreground="Red" FontSize="12" />
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="ARAÇ TİPİ" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding Type }" MinWidth="250"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="ŞASİ NO" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding ChassisNo}" MinWidth="250"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="KM" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding Km}" MinWidth="250"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="PASİF" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <CheckBox IsChecked="{Binding Passive}" MinWidth="250"></CheckBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="MODEL" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <AutoCompleteBox FilterMode="StartsWith" Text="{Binding Model}" x:Name="modelYears" MinWidth="250"></AutoCompleteBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="RENK" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding Color}" MinWidth="250"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <TextBlock Text="YAKIT" FontSize="16" HorizontalAlignment="Left" Width="100"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBox Text="{Binding Fuel}" MinWidth="250"></TextBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5 20 5 5">
                <TextBlock Text="KAYITLI OLDUĞU KİŞİ" FontSize="16" HorizontalAlignment="Left" Width="200"
                           VerticalAlignment="Center">
                </TextBlock>
                <TextBlock Text="{Binding CustormerFullname}" MinWidth="300" Margin="25 0 0 0"></TextBlock>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10" Spacing="10">
            <views:FilePickerView DataContext="{Binding  FilePickerViewModel}" />
        </StackPanel>
        <DockPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" HorizontalAlignment="Right">
            <Button DockPanel.Dock="Right" Content="Kaydet" HorizontalAlignment="Right"
                    Command="{Binding AddOrUpdateVehicleCommand }"
                    IsEnabled="{Binding !IsInValid}">
            </Button>
        </DockPanel>
    </Grid>
</Window>