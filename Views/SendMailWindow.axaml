<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RepairTracking.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="RepairTracking.Views.SendMailWindow"
        x:DataType="viewModels:SendMailViewModel"
        Title="Mail Gönderim Formu">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Başlık -->
        <TextBlock Text="Email Gönderim Formu" FontSize="18" FontWeight="Bold" Foreground="Black" Grid.Row="0"
                   HorizontalAlignment="Center" />
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal"
                    Spacing="10">
            <Button Content="TESLIMAT ŞABLONU" Command="{Binding DeliveryMessageTemplateCommand}"></Button>
            <Button Content="BOŞ ŞABLON" Command="{Binding EmptyMessageTemplateCommand}"></Button>
        </StackPanel>
        <!-- Alıcı E-Posta Adresi -->
        <StackPanel Grid.Row="2" Margin="0,10,0,10">
            <TextBlock Text="Kime:" />
            <TextBox Name="ToTextBox" Text="{Binding ToEmail}" Watermark="Alıcı Mail Adresini Girin" />
        </StackPanel>

        <!-- Konu -->
        <StackPanel Grid.Row="3" Margin="0,10,0,10">
            <TextBlock Text="Konu:" />
            <TextBox Name="SubjectTextBox" Text="{Binding Subject}" Watermark="Mail Konusunu Girin" />
        </StackPanel>

        <!-- Mesaj İçeriği -->
        <StackPanel Grid.Row="4" Margin="0,10,0,10">
            <TextBlock Text="Mesaj:" />
            <TextBox Name="MessageTextBox" AcceptsReturn="True" Height="200" TextWrapping="Wrap"
                     Watermark="Mesajınızı Girin" Text="{Binding Message}" />
        </StackPanel>

        <!-- Dosya Ekle -->
        <StackPanel Grid.Row="5" Margin="0,10,0,10">
            <TextBlock Text="Dosya:" />
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <TextBox Name="FilePathTextBox" IsReadOnly="True" Text="{Binding FilePath}" Width="400"
                         Watermark="Dosya seçin..." />
                <Button Content="Seç" IsVisible="{Binding !ClearableFile}" Margin="5,0,0,10"
                        Command="{Binding LoadFileCommand}" />
                <Button Content="Kaldır" IsVisible="{Binding ClearableFile}" Margin="5,0,0,10"
                        Command="{Binding ClearFileCommand}" />
            </StackPanel>
        </StackPanel>

        <!-- Gönder Butonu -->

        <DockPanel Grid.Row="6" HorizontalSpacing="10">
            <Button DockPanel.Dock="Left" HorizontalAlignment="Left" Content="Gönder" Margin="0,20,0,10" Width="150"
                    Command="{Binding SendEmailCommand}" />
            <!-- Sablonu Kaydet Butonu -->
            <Button DockPanel.Dock="Right" Content="Şablonu Kaydet" Margin="0,20,0,10" Width="150"
                    HorizontalAlignment="Right" Command="{Binding SaveTemplateCommand}" />
        </DockPanel>

    </Grid>
</Window>